<% if true  %>
<div class="modal fade" id="newPostButton" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">New Post</h4>
      </div>
      <div class="modal-body">
        <%= form_for [@user, @post] do |f| %>
          <div class="form-group">
            <%= f.text_field :title, :class => 'form-control', :placeholder => "Post Title..." %>
          </div>
          <div class="form-group">
            <%= f.text_field :link, :class => 'form-control', :placeholder => "Link Url..." %>
          </div>
          <div class="form-group">
            <input type="hidden" name="post[ranking]" value="10">
            <input type="date" name="post[date]" class="form-control">
          </div>
          <%= f.submit(:class => "btn btn-primary") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
<ul>
<% @posts.each do |p|  %>
  <li>
    <%= p.title %>
    <span class="glyphicon glyphicon-comment"></span>
    <span class="glyphicon glyphicon-thumbs-up"></span>
    <span class="glyphicon glyphicon-thumbs-down"></span>
  </li>
<% end %>
</ul>
