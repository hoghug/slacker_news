<% @comments.each do |comment| %>
  <ul id="comments">
      <li class="well"><%= comment.message %> <a class="glyphicon glyphicon-comment" data-target="#newComment-<%= comment.id %>"></a><ul></ul></li>
  </ul>

  <div class="modal fade" id="newComment-<%= comment.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">New Comment</h4>
          </div>
          <div class="modal-body">
            <%= form_for [@user, @post, comment] do |f| %>
              <div class="form-group">
                <%= f.text_field :user_id, :value => @user.id %>
                <%= f.text_field :post_id, :value => p.id %>
                <%= f.text_area :message, :rows => '5', :class => 'form-control', :placeholder => "Enter Comment..." %>
              </div>
              <%= f.submit(:class => "btn btn-primary") %>
            <% end %>
          </div>
        </div>
      </div>
  </div>
<% end %>
